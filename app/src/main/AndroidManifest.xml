<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mcabla.microbit.game">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.mcabla.microbit.game.ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mcabla.microbit.game.ui.MainSettingsActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.mcabla.microbit.game.ui.HelpActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"></activity>
        <activity
            android:name="com.mcabla.microbit.game.ui.MenuActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"></activity>
        <activity
            android:name="com.mcabla.microbit.game.ui.ServicesPresentActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"></activity>
        <activity
            android:name="com.mcabla.microbit.game.ui.DeviceInformationActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"></activity>
        <activity
            android:name="com.mcabla.microbit.game.ui.GameActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"></activity>
        <service
            android:name="com.mcabla.microbit.game.bluetooth.BleAdapterService"
            android:enabled="true" />

        <service 	android:name="com.mcabla.microbit.game.python.ScriptService">
            <intent-filter>
                <action android:name="com.android.python32.ScriptService" />
            </intent-filter>
        </service>

        <service 	android:name="com.mcabla.microbit.game.python.BackgroundScriptService">
            <intent-filter>
                <action android:name="com.android.python32.BackgroundScriptService" />
            </intent-filter>
        </service>

        <service android:name="com.mcabla.microbit.game.python.RpcServerService" />

        <activity 	android:configChanges="keyboardHidden|orientation"
            android:name="com.googlecode.android_scripting.activity.FutureActivity"
            android:theme="@android:style/Theme.Translucent"/>

        <activity
            android:name="com.mcabla.microbit.game.python.RpcServerLauncher"
            android:taskAffinity=""
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
</manifest>
