<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="@string/bluetooth_services"/>

    <TextView
        android:id="@+id/service_generic_access_presence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="normal"
        android:textSize="18dp"
        android:text="@string/service_generic_access"/>

    <TextView
        android:id="@+id/service_generic_attribute_presence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="normal"
        android:textSize="18dp"
        android:text="@string/service_generic_attribute"/>

    <TextView
        android:id="@+id/service_device_information_presence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="normal"
        android:textSize="18dp"
        android:text="@string/service_device_information"/>

    <TextView
        android:id="@+id/service_accelerometer_presence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="normal"
        android:textSize="18dp"
        android:text="@string/service_accelerometer"/>

    <TextView
        android:id="@+id/service_button_presence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="normal"
        android:textSize="18dp"
        android:text="@string/service_button"/>

    <TextView
        android:id="@+id/service_led_presence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="normal"
        android:textSize="18dp"
        android:text="@string/service_led"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:text="@string/services_key"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="normal"
        android:textSize="18dp"
        android:textColor="#228B22"
        android:text="Aanwezig op de micro:bit"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="normal"
        android:textSize="18dp"
        android:textColor="#FF0000"
        android:text="Niet aanwezig op de micro:bit"/>

</LinearLayout>